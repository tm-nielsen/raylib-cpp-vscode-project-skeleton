{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "BUILD_MODE=DEBUG"
            ],
            "windows": {
                "command": "${config:mingwBinPath}/mingw32-make.exe",
                "args": [
                    "COMPILER_PATH=${config.compilerPath}",
                    "RAYLIB_PATH=${config:raylibPath}",
                    "PROJECT_NAME=${config:projectName}",
                    "OBJS=*.cpp",
                    "BUILD_MODE=DEBUG",
                    "clean",
                    "all"
                ]
            },
            "osx": {
                "args": [
                    "PROJECT_NAME=${config:projectName}",
                    "OBJS=*.cpp",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "linux": {
                "args": [
                    "PROJECT_NAME=${config:projectName}",
                    "DESTDIR=/home/linuxbrew/.linuxbrew",
                    "RAYLIB_LIBTYPE=SHARED",
                    "EXAMPLE_RUNTIME_PATH=/home/linuxbrew/.linuxbrew/lib",
                    "OBJS=*.cpp",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build release",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP"
            ],
            "windows": {
                "command": "${config:mingwBinPath}/mingw32-make.exe",
                "args": [
                    "COMPILER_PATH=${config.compilerPath}",
                    "RAYLIB_PATH=${config:raylibPath}",
                    "PROJECT_NAME=${config:projectName}",
                    "OBJS=*.cpp",
                    "clean",
                    "all"
                ]
            },
            "osx": {
                "args": [
                    "PROJECT_NAME=${config:projectName}",
                    "OBJS=*.cpp"
                ]
            },
            "linux": {
                "args": [
                    "PROJECT_NAME=${config:projectName}",
                    "DESTDIR=/home/linuxbrew/.linuxbrew",
                    "RAYLIB_LIBTYPE=SHARED",
                    "EXAMPLE_RUNTIME_PATH=/home/linuxbrew/.linuxbrew/lib",
                    "OBJS=*.cpp"
                ]
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: ${config:mingwBinPath}/g++.exe"
        }
    ]
}
