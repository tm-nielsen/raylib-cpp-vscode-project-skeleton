{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "BUILD_MODE=DEBUG"
            ],
            "windows": {
                "command": "C:/ProgramData/chocolatey/bin/mingw32-make.exe",
                "args": [
                    "RAYLIB_PATH=../raylib",
                    "PROJECT_NAME=${workspaceFolderBasename}",
                    "OBJS=*.cpp",
                    "BUILD_MODE=DEBUG",
                    "clean",
                    "all"
                ]
            },
            "osx": {
                "args": [
                    "PROJECT_NAME=${workspaceFolderBasename}",
                    "OBJS=*.cpp",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "linux": {
                "args": [
                    "PROJECT_NAME=${workspaceFolderBasename}",
                    "DESTDIR=/home/linuxbrew/.linuxbrew",
                    "RAYLIB_LIBTYPE=SHARED",
                    "EXAMPLE_RUNTIME_PATH=/home/linuxbrew/.linuxbrew/lib",
                    "OBJS=*.cpp",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build release",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP"
            ],
            "windows": {
                "command": "C:/ProgramData/chocolatey/bin/mingw32-make.exe",
                "args": [
                    "RAYLIB_PATH=../raylib",
                    "PROJECT_NAME=${input:projectName}",
                    "OBJS=*.cpp",
                    "clean",
                    "all"
                ]
            },
            "osx": {
                "args": [
                    "PROJECT_NAME=${workspaceFolderBasename}",
                    "OBJS=*.cpp"
                ]
            },
            "linux": {
                "args": [
                    "PROJECT_NAME=${workspaceFolderBasename}",
                    "DESTDIR=/home/linuxbrew/.linuxbrew",
                    "RAYLIB_LIBTYPE=SHARED",
                    "EXAMPLE_RUNTIME_PATH=/home/linuxbrew/.linuxbrew/lib",
                    "OBJS=*.cpp"
                ]
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: C:/ProgramData/chocolatey/bin/g++.exe"
        }
    ],
    "inputs": [
        {
            "id": "projectName",
            "default": "project",
            "type": "promptString",
            "description": "Name the release build",
        }
    ]
}
